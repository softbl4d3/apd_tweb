<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chef Page</title>
    <style>
        body {
            background-color: #e0f7ff;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .orders-container {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            grid-auto-rows: 150px;
            gap: 20px;
            width: 90%;
            max-width: 1200px;
        }

        .sticky-note {
            background-color: #fff8b3;
            box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.2);
            padding: 15px;
            border-radius: 10px;
            cursor: pointer;
            transition: transform 0.2s;
            display: flex;
            flex-direction: column;
            justify-content: center;
            word-wrap: break-word;
        }

            .sticky-note:hover {
                transform: translateY(-5px);
            }

            .sticky-note h3 {
                margin: 0 0 10px;
                font-size: 18px;
            }

            .sticky-note p {
                margin: 5px 0;
                font-size: 14px;
            }

        .modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            display: none;
        }

        .modal-content {
            background-color: white;
            width: 60%;
            height: 30%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 15px;
            overflow: hidden;
        }

            .modal-content div {
                width: 50%;
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                cursor: pointer;
                font-size: 24px;
                font-weight: bold;
                user-select: none;
            }

            .modal-content .confirm {
                background-color: #c8f7c5;
                color: #2d6a4f;
            }

            .modal-content .cancel {
                background-color: #f8d7da;
                color: #842029;
            }
    </style>
</head>
<body>
    <h1>Заказы на кухне</h1>
    <div class="orders-container" id="ordersContainer">
        <!-- Стикеры с заказами будут добавляться сюда -->
    </div>

    <div class="modal" id="confirmationModal">
        <div class="modal-content">
            <div class="cancel" id="cancelButton">Нет</div>
            <div class="confirm" id="confirmButton">Да</div>
        </div>
    </div>

    <script>
        const orders = [
            { title: "Карбонара", portions: 2, description: "Без сыра" },
            { title: "Белое вино", portions: 1, description: "Охлажденное" },
            { title: "Салат Цезарь", portions: 3, description: "Без анчоусов" },
            { title: "Стейк", portions: 1, description: "Средняя прожарка" },
            { title: "Пицца Маргарита", portions: 2, description: "Дополнительно томаты" },
            { title: "Суп Том Ям", portions: 1, description: "Острый" }
        ];

        const ordersContainer = document.getElementById("ordersContainer");
        const modal = document.getElementById("confirmationModal");
        const confirmButton = document.getElementById("confirmButton");
        const cancelButton = document.getElementById("cancelButton");

        let currentOrderElement = null;

        function renderOrders() {
            ordersContainer.innerHTML = "";
            orders.forEach((order, index) => {
                const note = document.createElement("div");
                note.className = "sticky-note";
                note.dataset.index = index;
                note.innerHTML = `
                    <h3>${order.title}</h3>
                    <p>Порций: ${order.portions}</p>
                    <p>${order.description}</p>
                `;
                note.addEventListener("click", () => openModal(note));
                ordersContainer.appendChild(note);
            });
        }

        function openModal(orderElement) {
            currentOrderElement = orderElement;
            modal.style.display = "flex";
        }

        confirmButton.addEventListener("click", () => {
            if (currentOrderElement) {
                const index = parseInt(currentOrderElement.dataset.index);
                orders.splice(index, 1);
                renderOrders();
                modal.style.display = "none";
            }
        });

        cancelButton.addEventListener("click", () => {
            modal.style.display = "none";
        });

        window.addEventListener("click", (event) => {
            if (event.target === modal) {
                modal.style.display = "none";
            }
        });

        renderOrders();
    </script>
</body>
</html>
