@model List<WaiterOrderViewModel>

@{
    ViewBag.Title = "My Orders";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">My Orders</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">You have no orders yet.</div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Table</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>Comment</th>
                    <th>Dishes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.TableNumber</td>
                        <td>
                            <span class="badge badge-default" style="background-color: #222; color: #fff;">@order.Status</span>
                        </td>


                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>@order.OrderComment</td>
                        <td>
                            <ul class="mb-0">
                                @foreach (var item in order.Items)
                                {
                                    <li>
                                        <strong>@item.DishName</strong> &times; @item.Amount
                                        @if (!string.IsNullOrWhiteSpace(item.Note))
                                        {
                                            <span class="text-muted">— @item.Note</span>
                                        }
                                    </li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
