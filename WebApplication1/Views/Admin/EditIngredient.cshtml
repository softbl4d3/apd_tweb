@model eUseControl.Web.Models.IngridientViewModel

@{
    ViewBag.Title = "Редактирование ингредиента";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Редактировать ингредиент</h2>

    @using (Html.BeginForm("EditIngredient", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Название ингредиента")
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Amount, "Количество")
            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, "Статус")
            @Html.EnumDropDownListFor(model => model.Status, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>

        <button type="submit"formmethod="post" class="btn btn-primary">Сохранить изменения</button>
        <a href="@Url.Action("Ingredients", "Admin")" class="btn btn-secondary">Отмена</a>
    }
</div>