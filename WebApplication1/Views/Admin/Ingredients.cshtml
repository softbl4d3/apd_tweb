@model List<eUseControl.Web.Models.IngridientViewModel>

@{
    ViewBag.Title = "Меню ингредиентов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Меню ингредиентов</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ingredient in Model)
            {
                <tr>
                    <td>@ingredient.Name</td>
                    <td>@ingredient.Amount</td>
                    <td>@ingredient.Status</td>
                    <td>
                        <a href="@Url.Action("EditIngredient", "Admin", new { id = ingredient.Id })" class="btn btn-sm btn-warning">Редактировать</a>
                        <a href="@Url.Action("DeleteIngredient", "Admin", new { id = ingredient.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены, что хотите удалить этот ингредиент?');">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a href="@Url.Action("IngridientAdd", "Admin")" class="btn btn-primary">Добавить ингредиент</a>
    </div>
</div>